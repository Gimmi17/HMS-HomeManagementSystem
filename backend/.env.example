# Meal Planner Backend - Environment Variables Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION (Required)
# =============================================================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://meal_planner:your-secure-password@postgres:5432/meal_planner_db

# =============================================================================
# SECURITY & AUTHENTICATION (Required)
# =============================================================================
# JWT secret key for signing tokens (MUST be changed in production)
# Generate a secure key: openssl rand -hex 32
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production

# JWT token expiration times (in seconds)
JWT_EXPIRATION=3600                    # Access token: 1 hour
REFRESH_TOKEN_EXPIRATION=604800        # Refresh token: 7 days (1 week)

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# API version prefix
API_VERSION=v1

# Project name (displayed in API documentation)
PROJECT_NAME=Meal Planner API

# Debug mode (set to false in production)
DEBUG=false

# =============================================================================
# GROCY INTEGRATION (Optional)
# =============================================================================
# Grocy instance URL (leave empty to disable Grocy integration)
# Format: http://hostname:port (no trailing slash)
# Example: http://grocy:9283 or http://192.168.1.100:9283
# If empty, endpoints will return empty lists (graceful degradation)
GROCY_URL=http://your-grocy-instance:9283

# Grocy API key for authentication
# Generate in Grocy: Settings → API Keys → Create new key
# Copy the key and paste here
GROCY_API_KEY=your-grocy-api-key-here

# =============================================================================
# MQTT CONFIGURATION (Optional - Phase 2)
# =============================================================================
# MQTT broker for Home Assistant integration
MQTT_BROKER=
MQTT_PORT=1883
MQTT_USER=
MQTT_PASSWORD=

# =============================================================================
# NOTES
# =============================================================================
# - Never commit the actual .env file to git (it's in .gitignore)
# - Use strong, unique passwords and keys in production
# - For Docker: host should be the service name (e.g., "postgres", not "localhost")
# - For local development: host should be "localhost"
