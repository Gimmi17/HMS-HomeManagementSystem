# Meal Planner - Environment Variables Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE
# =============================================================================
# PostgreSQL password (CHANGE THIS!)
DB_PASSWORD=your-secure-password-change-me

# =============================================================================
# BACKEND SECURITY
# =============================================================================
# Secret key for JWT signing (MUST BE RANDOM AND SECRET!)
# Generate with: openssl rand -hex 32
SECRET_KEY=your-super-secret-key-change-in-production-use-openssl-rand-hex-32

# JWT token expiration in seconds (default: 3600 = 1 hour)
JWT_EXPIRATION=3600

# Refresh token expiration in seconds (default: 604800 = 7 days)
REFRESH_TOKEN_EXPIRATION=604800

# =============================================================================
# GROCY INTEGRATION
# =============================================================================
# Grocy instance URL (e.g., http://192.168.1.100:9283)
GROCY_URL=http://your-grocy-instance:port

# Grocy API key (get it from Grocy Settings -> API keys)
GROCY_API_KEY=your-grocy-api-key-here

# =============================================================================
# MQTT (OPTIONAL - for Home Assistant integration)
# =============================================================================
# MQTT broker hostname or IP (leave empty if not using)
MQTT_BROKER=

# MQTT broker port (default: 1883)
MQTT_PORT=1883

# MQTT username (leave empty if no auth)
MQTT_USER=

# MQTT password (leave empty if no auth)
MQTT_PASSWORD=

# =============================================================================
# FRONTEND
# =============================================================================
# API URL for frontend to connect to backend
# In production: http://your-nas-ip:8000/api/v1
# In development: http://localhost:8000/api/v1
VITE_API_URL=http://localhost:8000/api/v1

# Application name shown in UI
VITE_APP_NAME=Meal Planner

# =============================================================================
# LLM INTEGRATION (OPTIONAL)
# =============================================================================
# Default LLM server URL (OpenAI-compatible: mlx-lm-server, LM Studio, Ollama)
# Users can also configure connections in Settings > LLM
# LLM_URL=http://localhost:8080

# Default model name (use "default" for server's default model)
# LLM_MODEL=default

# =============================================================================
# OPTIONAL - FUTURE INTEGRATIONS
# =============================================================================
# Telegram Bot Token (for notifications - Phase 2)
# TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# n8n URL (for automations - Phase 2)
# N8N_URL=http://n8n:5678

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================
# Enable debug mode (not for production!)
# DEBUG=1
